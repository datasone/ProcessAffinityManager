<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ProcessAffinityManager.ViewModels"
             x:Class="ProcessAffinityManager.Views.SettingsPageView"
             x:DataType="vm:SettingsPageViewModel">

    <StackPanel Spacing="15" Margin="20 40 20 20">
        <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" Margin="0 0 0 20"/>

        <!-- General Settings -->
        <TextBlock Text="General" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,0" />

        <ToggleSwitch OnContent="Start application on system boot"
                      OffContent="Start application on system boot"
                      IsChecked="{Binding StartOnSystemBoot}" />

        <ToggleSwitch OnContent="Start application minimized to the tray"
                      OffContent="Start application minimized to the tray"
                      IsChecked="{Binding StartMinimized}" />

        <!-- Appearance Settings -->
        <TextBlock Text="Appearance" FontSize="18" FontWeight="SemiBold" Margin="0,20,0,0" />
        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
            <TextBlock Text="Theme" VerticalAlignment="Center" />
            <ComboBox ItemsSource="{Binding AppThemeTypes}"
                      SelectedItem="{Binding Theme}"
                      Width="150" />
        </StackPanel>
    </StackPanel>
</UserControl>