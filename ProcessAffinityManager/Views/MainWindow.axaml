    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.fs) -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <ui:NavigationView IsSettingsVisible="False"
                       SelectionChanged="OnSelectionChanged"
                       windowing:AppWindow.AllowInteractionInTitleBar="True">
        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem Content="Home" Tag="Home" IsSelected="True">
                <ui:NavigationViewItem.IconSource>
                    <ui:PathIconSource Data="{StaticResource home_regular}"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>
            <ui:NavigationViewItem Content="Rules" Tag="Rules">
                <ui:NavigationViewItem.IconSource>
                    <ui:PathIconSource Data="{StaticResource document_one_page_multiple_sparkle_regular}"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>
            <ui:NavigationViewItem Content="Profiles" Tag="Profiles">
                <ui:NavigationViewItem.IconSource>
                    <ui:PathIconSource Data="{StaticResource board_split_regular}"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>
            <ui:NavigationViewItem Content="Log" Tag="Log">
                <ui:NavigationViewItem.IconSource>
                    <ui:PathIconSource Data="{StaticResource document_regular}"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>
        </ui:NavigationView.MenuItems>

        <ui:NavigationView.FooterMenuItems>
            <ui:NavigationViewItem Tag="ToggleMonitoring">
                <ui:NavigationViewItem.Content>
                    <ToggleSwitch OnContent="Monitoring Active"
                                  OffContent="Start Monitoring"
                                  IsChecked="{Binding IsMonitoring}"
                                  Command="{Binding ToggleMonitoringCommand}" />
                </ui:NavigationViewItem.Content>
                <ui:NavigationViewItem.IconSource>
                    <ui:PathIconSource Data="{StaticResource desktop_pulse_regular}"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>
            <ui:NavigationViewItem Content="Settings" Tag="Settings">
                <ui:NavigationViewItem.IconSource>
                    <ui:PathIconSource Data="{StaticResource settings_regular}"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>
            <ui:NavigationViewItem Content="About" Tag="About">
                <ui:NavigationViewItem.IconSource>
                    <ui:PathIconSource Data="{StaticResource info_regular}"/>
                </ui:NavigationViewItem.IconSource>
            </ui:NavigationViewItem>
        </ui:NavigationView.FooterMenuItems>
        
        <ScrollViewer Padding="10">
            <ui:Frame>
                <ContentControl Content="{Binding CurrentPage}">
                    <ContentControl.Height>
                        <Binding RelativeSource="{RelativeSource AncestorType={x:Type ScrollViewer}}"
                                 Path="Bounds.Height"
                                 Converter="{StaticResource HeightAdjuster}"
                                 ConverterParameter="40" />
                    </ContentControl.Height>
                </ContentControl>
            </ui:Frame>
        </ScrollViewer>
    </ui:NavigationView>

</Window>