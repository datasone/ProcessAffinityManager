<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ProcessAffinityManager.App"
             x:DataType="local:App"
             xmlns:local="using:ProcessAffinityManager"
             xmlns:styling="using:FluentAvalonia.Styling"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <styling:FluentAvaloniaTheme PreferUserAccentColor="True" PreferSystemTheme="True" />
    </Application.Styles>
    
</Application>